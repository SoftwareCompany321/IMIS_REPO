@using IMIS_CORE.Core
@model IMIS_Service.ViewModel.ItemBrandVM
@{
    ViewData["Title"] = "ItemBrandCreate";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<body>
    <div id="page-wrapper">
        <div class="container-fluid">
            <div class="tab-lists-wrapper boxed parentTabs">
                <ul class="nav nav-tabs">
                    <li class="active"><a href="#sub11">@Utils.GetLabel("Create Item Brand")</a> </li>

                </ul>
                <div class="tab-content">
                    <a asp-action="ItemBrandList" asp-controller="ItemBrand" class="btn btn-warning btn-fab"><i class="material-icons">arrow_backward</i></a>
                    <div class="tab-pane fade active in" id="sub111">
                        <h2 class="form-title">
                            @Utils.GetLabel("Add Item Brand")
                        </h2>

                        <div class="row">
                            <div class="col-md-8">
                                <div class="well">
                                    <form method="post" asp-action="ItemBrandCreate">
                                        @Html.AntiForgeryToken()
                                        <div class="form-group is-empty">
                                            <label for="region" class="col-md-2 control-label">
                                                @Utils.GetLabel("Description(English)")<span class="requried">*</span>
                                            </label>

                                            <div class="col-md-9">
                                                <input type="text" class="form-control" asp-for="NameEn">
                                            </div>
                                        </div>
                                        <div class="form-group is-empty">
                                            <label for="region" class="col-md-2 control-label">
                                                @Utils.GetLabel("Description(Nepali)")<span class="requried">*</span>
                                            </label>
                                            <div class="col-md-9">
                                                <input type="text" class="form-control" asp-for="NameNp" onkeypress="return setUnicode(event,this);">
                                            </div>
                                        </div>

                                        <div class="form-group form-action">
                                            <div class="col-md-10 col-md-offset-2">
                                                <button type="submit" class="btn btn-primary">@Utils.GetLabel("Submit")</button>
                                                <button type="button" class="btn btn-default">@Utils.GetLabel("Cancel")</button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.container-fluid -->
    </div>
</body>
