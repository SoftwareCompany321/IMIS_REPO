@using IMIS_CORE.Core

@model IMIS_Service.ViewModel.RoomDetailsVM
    <div>
        <input asp-for="RoomId" type="hidden" />
        <div class="form-group is-empty">
            <label for="region" class="col-md-2 control-label">@Utils.GetLabel("Code")<span class="requried">*</span></label>
            <div class="col-md-9">
                <input type="text" class="form-control" asp-for="Code">
            </div>
        </div>
        <div class="form-group is-empty">
            <label for="region" class="col-md-2 control-label">
                @Utils.GetLabel("Description(English)")<span class="requried">*</span>
            </label>
            <div class="col-md-9">
                <input type="text" class="form-control" asp-for="DescEn">
            </div>
        </div>
        <div class="form-group is-empty">
            <label for="region" class="col-md-2 control-label">
                @Utils.GetLabel("Description(Nepali)")<span class="requried">*</span>
            </label>
            <div class="col-md-9">
                <input type="text" class="form-control" asp-for="DescNp" onkeypress="return setUnicode(event,this);">
            </div>
        </div>
        <div class="form-group is-empty">
            <label for="region" class="col-md-2 control-label">
                @Utils.GetLabel("Floor No.")<span class="requried">*</span>
            </label>
            <div class="col-md-9">
                <input type="number" class="form-control" asp-for="FloorNo">
            </div>
        </div>
        <div class="form-group is-empty">
            <label for="region" class="col-md-2 control-label">
                @Utils.GetLabel("Block No.")<span class="requried">*</span>
            </label>
            <div class="col-md-9">
                <input type="number" class="form-control" asp-for="BlockNo">
            </div>
        </div>
        @*drop Box*@
        <div class="form-group is-empty">
            <label for="region" class="col-md-2 control-label">
                @Utils.GetLabel("Branch")<span class="requried">*</span>
            </label>
            <div class="col-md-9">
                <select asp-for="DeptId" asp-items="@ViewData["departments"] as SelectList" class="form-control">
                    <option value="0">@Utils.GetLabel("Please Select")</option>
                </select>
                
            </div>
        </div>

    </div>