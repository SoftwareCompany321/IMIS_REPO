@using IMIS_CORE.Core
@model IMIS_Service.ViewModel.ItemCategoriesVM
@{
    ViewData["Title"] = Utils.GetLabel("DepartmentCreate");
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<body>
    <div id="page-wrapper">
        <div class="container-fluid">
            <div class="tab-lists-wrapper boxed parentTabs">
                <ul class="nav nav-tabs">
                    <li class="active"><a href="#sub11">@Utils.GetLabel("Create Department")</a> </li>

</ul>
                <div class="tab-content">
                    <a asp-action="DepartmentList" asp-controller="Department" class="btn btn-warning btn-fab"><i class="material-icons">arrow_backward</i></a>
                    <div class="tab-pane fade active in" id="sub111">
                        <h2 class="form-title">
                            @Utils.GetLabel("Add Department")</h2>

                                                <div class="row">
                                                    <div class="col-md-8">
                                                        <div class="well">
                                                            <form method="post" asp-action="DepartmentCreate" asp-controller="Department">
                                                                @Html.AntiForgeryToken()
                                                                @await Html.PartialAsync("~/Views/Department/_partialDepartment.cshtml", Model)
                                                                <div class="form-group form-action">
                                                                    <div class="col-md-10 col-md-offset-2">
                                                                        <button type="submit" class="btn btn-primary">
                                                                            @Utils.GetLabel("Submit")</button>

                                                                        <button type="button" class="btn btn-default">@Utils.GetLabel("Cancel")</button>
</div>
                                                                </div>
                                                            </form>
                                                        </div>
                                                    </div>

                                                </div>
</div>
                </div>
            </div>
        </div>
        <!-- /.container-fluid -->
    </div>
</body>
