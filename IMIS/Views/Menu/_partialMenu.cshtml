@using IMIS_CORE.Core
@{
    ViewData["Title"] = "MenuCreate";
    Layout = null;
}
@model IMIS_Service.ViewModel.MenuVM
<div class="row">
    <div class="col-md-12">
        <div class="well">
            <form method="post" asp-action="MenuCreate">
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <label for="code" class="col-md-2 control-label">@Utils.GetLabel("Parent Menu")<span class="requried">*</span></label>
                    <div class="col-md-7">
                        <select asp-for="ParentMenuId" asp-items="@ViewData["ParentMenu"] as SelectList" class="form-control">
                            <option value="0">@Utils.GetLabel("Root")</option>
                        </select>
                    </div>
                </div>
                @if (Model != null)
                {
                    <input type="hidden" asp-for="Id"/>
                }
                <div class="form-group is-empty">
                    <label for="region" class="col-md-2 control-label">@Utils.GetLabel("Child Menu Name")<span class="requried">*</span></label>
                    <div class="col-md-9">
                        <input type="text" class="form-control" asp-for="DisplayName">
                    </div>
                </div>
                <div class="form-group is-empty">
                    <label for="region" class="col-md-2 control-label">@Utils.GetLabel("Nep Name")<span class="requried">*</span></label>
                    <div class="col-md-9">
                        <input type="text" class="form-control" asp-for="NepName" onkeypress="return setUnicode(event,this);">
                    </div>
                </div>
                <div class="form-group is-empty">
                    <label for="short-name" class="col-md-2 control-label">@Utils.GetLabel("Menu Url")</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control" asp-for="MenuUrl">
                    </div>
                </div>
                <div class="form-group form-action">
                    <div class="col-md-10 col-md-offset-2">
                        <button type="submit" class="btn btn-primary">@Utils.GetLabel("Submit")</button>
                        <button type="button" class="btn btn-default">@Utils.GetLabel("Cancel")</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

</div>