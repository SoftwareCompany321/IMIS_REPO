@using IMIS_CORE.Core

@model IMIS_Service.ViewModel.InvAdujTypeVM
    <div>
        <input asp-for="Id" type="hidden" />
        <div class="form-group is-empty">
            <label for="region" class="col-md-2 control-label">@Utils.GetLabel("Code")<span class="requried">*</span></label>
            <div class="col-md-9">
                <input type="text" class="form-control" asp-for="Code">
            </div>
        </div>
        <div class="form-group is-empty">
            <label for="region" class="col-md-2 control-label">
                @Utils.GetLabel("Description(English)")<span class="requried">*</span>
            </label>
            <div class="col-md-9">
                <input type="text" class="form-control" asp-for="NameEn">
            </div>
        </div>
        <div class="form-group is-empty">
            <label for="region" class="col-md-2 control-label">
                @Utils.GetLabel("Description(Nepali)")<span class="requried">*</span>
            </label>
            <div class="col-md-9">
                <input type="text" class="form-control" asp-for="NameNp" onkeypress="return setUnicode(event,this);">
            </div>
        </div>


        <div class="form-group is-empty">
            <label for="short-name" class="col-md-2 control-label">
                @Utils.GetLabel("Add/Sub")
            </label>
            <div class="col-md-6">
                <select asp-for="AddSub" class="form-control">
                    <option value="0">@Utils.GetLabel("Please Select")</option>
                    <option value="A">@Utils.GetLabel("Addition")</option>
                    <option value="S">@Utils.GetLabel("Subtraction")</option> 
                </select>
               
            </div>

        </div>
        <div class="form-group is-empty">
            <label for="short-name" class="col-md-2 control-label">
                @Utils.GetLabel("Type")
            </label>
            <div class="col-md-6">
                <select asp-for="AdjType" class="form-control">
                    <option value="0">@Utils.GetLabel("Please Select")</option>
                    <option value="A">@Utils.GetLabel("Adjustment")</option>
                    <option value="R">@Utils.GetLabel("Release")</option>
                    <option value="P">@Utils.GetLabel("Purchase")</option> 
                </select>
                 
            </div>

        </div>

    </div>