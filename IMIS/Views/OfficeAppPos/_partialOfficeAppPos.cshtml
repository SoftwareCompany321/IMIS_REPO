@using IMIS_CORE.Core

@model IMIS_Service.ViewModel.OfficeAppPosVM
    <div>
        <input asp-for="LocalPostId" type="hidden" />
        <div class="form-group is-empty">
            <label for="region" class="col-md-2 control-label">@Utils.GetLabel("Code")<span class="requried">*</span></label>
            <div class="col-md-9">
                <input type="text" class="form-control" asp-for="Code">
            </div>
        </div>
        <div class="form-group is-empty">
            <label for="region" class="col-md-2 control-label">
                @Utils.GetLabel("Post Name(Eng)")<span class="requried">*</span>
            </label>
            <div class="col-md-9">
                <input type="text" class="form-control" asp-for="LocalPostNameEn">
            </div>
        </div>
        <div class="form-group is-empty">
            <label for="region" class="col-md-2 control-label">
                @Utils.GetLabel("Post Name(Nep)")<span class="requried">*</span>
            </label>
            <div class="col-md-9">
                <input type="text" class="form-control" asp-for="LocalPostName">
            </div>
        </div>

        @*dropdown*@
        <div class="form-group is-empty">
            <label for="short-name" class="col-md-2 control-label">
                @Utils.GetLabel("Post Grade")
            </label>
            <div class="col-md-6">
                <select asp-for="PostId" asp-items="@ViewData["post"] as SelectList" class="form-control">
                    <option value="0">@Utils.GetLabel("Please Select")</option>
                </select>
                 
            </div>

        </div>
        <div class="form-group is-empty">
            <label for="short-name" class="col-md-2 control-label">
                @Utils.GetLabel("Duty Description")
            </label>
            <div class="col-md-6">
                <input type="text" class="form-control" asp-for="PostDuties">
            </div>

        </div>

    </div>