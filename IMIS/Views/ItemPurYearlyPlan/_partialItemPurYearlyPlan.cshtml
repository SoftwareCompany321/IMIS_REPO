                </div>
                <span asp-validation-for="TendrAcceptDtAd" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="form-group is-empty row">
        <div class="col-md-6">
            <label for="region" class="col-md-6 control-label">
                @Utils.GetLabel("Remarks")<span class="requried">*</span>
            </label>
            <div class="col-md-6">
                <input type="text" class="form-control" asp-for="Remarks">
            </div>
        </div>
        <div class="col-md-6">
            <label for="region" class="col-md-6 control-label">
                @Utils.GetLabel("Tender Finsih Date")<span class="requried">*</span>
            </label>
            <div class="col-md-6">

                <div class='input-group date width-full nepali-calendar' id='TendrSaleDate'>
                    <input type="text" asp-for="TendrSaleDate" name="TendrSaleDate" autocomplete="off" class="form-control font_value nepali-calendar" />
                    <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                </div>
                <span asp-validation-for="TendrSaleDate" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="form-group is-empty row">
        <div class="col-md-6">
            <label for="region" class="col-md-6 control-label">
                @Utils.GetLabel("Analysis Design Date")<span class="requried">*</span>
            </label>
            <div class="col-md-6">

                <div class='input-group date width-full nepali-calendar' id='AnlysisDsgnDtAd'>
                    <input type="text" asp-for="AnlysisDsgnDtAd" name="AnlysisDsgnDtAd" autocomplete="off" class="form-control font_value nepali-calendar" />
                    <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                </div>
                <span asp-validation-for="AnlysisDsgnDtAd" class="text-danger"></span>
            </div>
        </div>
        @*<div class="col-md-6">
                <label for="region" class="col-md-2 control-label">
                    @Utils.GetLabel("Tender Finsih Date")<span class="requried">*</span>
                </label>
                <div class="col-md-9">
                    <input type="text" class="form-control" asp-for="TendrCallDtAd">
                </div>
            </div>*@
    </div>
</div>
 
