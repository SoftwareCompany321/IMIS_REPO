@using IMIS_CORE.Core

@model IMIS_Service.ViewModel.ItemPurYearlyPlanVM

<div>
    <div>
        Yearly Plan Entry Date
    </div>

    <div class="form-group is-empty row">
        <div class="col-md-6">
            <label for="region" class="col-md-2 control-label">
                @Utils.GetLabel("Paln Id:")<span class="requried">*</span>
            </label>
            <div class="col-md-9">
                <input type="text" hidden class="form-control" readonly>
                <input type="text" hidden class="form-control" asp-for="Id">
            </div>
        </div>
        <div class="col-md-6">
            <label for="region" class="col-md-6 control-label">
                @Utils.GetLabel("Appx Amt Accepted Date")<span class="requried">*</span>
            </label>
            <div class="col-md-6">
                <div class="input-group date width-full">
                    <input type="text" asp-for="AprxAmtAcptDate" id="AprxAmtAcptDate1" name="AprxAmtAcptDate" autocomplete="off" class="form-control font_value" />
                    <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                </div>
                <span asp-validation-for="AprxAmtAcptDate" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="form-group is-empty row">
        <div class="col-md-6">
            <label for="region" class="col-md-2 control-label">
                @Utils.GetLabel("Description(Nepali)")<span class="requried">*</span>
            </label>
            <div class="col-md-9">
                <input type="text" class="form-control" asp-for="NameNp" onkeypress="return setUnicode(event,this);">>
            </div>
        </div>
        <div class="col-md-6">
            <label for="region" class="col-md-6 control-label">
                @Utils.GetLabel("Notice Publish Date")<span class="requried">*</span>
            </label>
            <div class="col-md-6">
                <div class='input-group date width-full nepali-calendar' id='InfoPublishDate'>
                    <input type="text" asp-for="InfoPublishDate" name="InfoPublishDate" autocomplete="off" class="form-control font_value nepali-calendar" />
                    <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                </div>
                <span asp-validation-for="InfoPublishDate" class="text-danger"></span>
            </div>

        </div>
    </div>

    <div class="form-group is-empty row">
        <div class="col-md-6">
            <label for="region" class="col-md-2 control-label">
                @Utils.GetLabel("Description(English)")<span class="requried">*</span>
            </label>
            <div class="col-md-9">
                <input type="text" class="form-control" asp-for="NameEn">
            </div>
        </div>
        <div class="col-md-6">
            <label for="region" class="col-md-6 control-label">
                @Utils.GetLabel("Tender Call Date")<span class="requried">*</span>
            </label>
            <div class="col-md-6">
                <div class='input-group date width-full nepali-calendar' id='TendrCallDtAd'>
                    <input type="text" asp-for="TendrCallDtAd" name="TendrCallDtAd" autocomplete="off" class="form-control font_value nepali-calendar" />
                    <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                </div>
                <span asp-validation-for="TendrCallDtAd" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="form-group is-empty row">
        <div class="col-md-6">
            <label for="region" class="col-md-6 control-label">
                @Utils.GetLabel("Appx Amount")<span class="requried">*</span>
            </label>
            <div class="col-md-6">
                <input type="text" class="form-control" asp-for="ApproxAmt">
            </div>
        </div>
        <div class="col-md-6">
            <label for="region" class="col-md-6 control-label">
                @Utils.GetLabel("From Reg Date")<span class="requried">*</span>
            </label>
            <div class="col-md-6">

                <div class='input-group date width-full nepali-calendar' id='FormEntryDate'>
                    <input type="text" asp-for="FormEntryDate" name="FormEntryDate" autocomplete="off" class="form-control font_value nepali-calendar" />
                    <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                </div>
                <span asp-validation-for="FormEntryDate" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="form-group is-empty row">
        <div class="col-md-6">
            <label for="region" class="col-md-2 control-label">
                @Utils.GetLabel("Purchase Type")<span class="requried">*</span>
            </label>
            <div class="col-md-9">
                <select asp-for="PurType" asp-items="@ViewData["InvType"] as SelectList">
                </select>
            </div>
        </div>
        <div class="col-md-6">
            <label for="region" class="col-md-6 control-label">
                @Utils.GetLabel("Tender Open Date")<span class="requried">*</span>
            </label>
            <div class="col-md-6">
                <div class='input-group date width-full nepali-calendar' id='FormEntryDate'>
                    <input type="text" asp-for="TendrOpenDtAd" name="TendrOpenDtAd" autocomplete="off" class="form-control font_value nepali-calendar" />
