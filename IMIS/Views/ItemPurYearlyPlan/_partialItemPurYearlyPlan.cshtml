                </div>
                <span asp-validation-for="TendrOpenDtAd" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="form-group is-empty row">
        <div class="col-md-6">
            <label for="region" class="col-md-2 control-label">
                @Utils.GetLabel("Purchase Agree Type")<span class="requried">*</span>
            </label>
            <div class="col-md-9">
                <select asp-for="AgreementType" asp-items="@ViewData["InvType"] as SelectList">
                </select>
            </div>
        </div>
        <div class="col-md-6">
            <label for="region" class="col-md-6 control-label">
                @Utils.GetLabel("Tender Accept Date")<span class="requried">*</span>
            </label>
            <div class="col-md-6">
                <div class='input-group date width-full nepali-calendar' id='TendrAcceptDtAd'>
                    <input type="text" asp-for="TendrAcceptDtAd" name="TendrAcceptDtAd" autocomplete="off" class="form-control font_value nepali-calendar" />
