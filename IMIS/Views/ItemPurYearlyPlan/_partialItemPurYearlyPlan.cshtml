<script>
    $(document).ready(function () {
        $('#AprxAmtAcptDate1').nepaliDatePicker(); 
        $('#InfoPublishDate').nepaliDatePicker();
        $('#TendrOpenDtAd').nepaliDatePicker();
        $('#FormEntryDate').nepaliDatePicker();
        $('#TendrAcceptDtAd').nepaliDatePicker();
        $('#TendrSaleDate').nepaliDatePicker();
        $('#AnlysisDsgnDtAd').nepaliDatePicker();
        $('#TendrCallDtAd').nepaliDatePicker();
    });
</script>