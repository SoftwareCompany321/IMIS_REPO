@model IMIS_Service.ViewModel.ItemPurYearlyPlanVM

<div>
    <div>
        Yearly Plan Entry Date
    </div>

    <div class="form-group is-empty row">
        @*<div class="col-md-6">
            <label for="region" class="col-md-2 control-label">
