            </div>
        </div>
        <div class="col-md-6">
            <label for="region" class="col-md-6 control-label">
                @Utils.GetLabel("Tender Accept Date")<span class="requried">*</span>
            </label>
            <div class="col-md-6">
                <div class='input-group date width-full nepali-calendar'>
                    <input type="text" asp-for="TendrAcceptDate" id='TendrAcceptDtAd' autocomplete="off" class="form-control font_value nepali-calendar" />
                    <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                </div>
                <span asp-validation-for="TendrAcceptDate" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="form-group is-empty row">
        <div class="col-md-6">
            <label for="region" class="col-md-6 control-label">
                @Utils.GetLabel("Remarks")<span class="requried">*</span>
            </label>
            <div class="col-md-6">
                <input type="text" class="form-control" asp-for="Remarks">
            </div>
        </div>
        <div class="col-md-6">
            <label for="region" class="col-md-6 control-label">
                @Utils.GetLabel("Tender Finsih Date")<span class="requried">*</span>
            </label>
            <div class="col-md-6">

                <div class='input-group date width-full nepali-calendar'>
                    <input type="text" asp-for="TendrSaleDate"  id='TendrSaleDate' autocomplete="off" class="form-control font_value nepali-calendar" />
                    <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                </div>
                <span asp-validation-for="TendrSaleDate" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="form-group is-empty row">
        <div class="col-md-6">
            <label for="region" class="col-md-6 control-label">
                @Utils.GetLabel("Analysis Design Date")<span class="requried">*</span>
            </label>
            <div class="col-md-6">

                <div class='input-group date width-full nepali-calendar'>
                    <input type="text" asp-for="WrkAcmplshDate" id='AnlysisDsgnDtAd' autocomplete="off" class="form-control font_value nepali-calendar" />
                    <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                </div>
                <span asp-validation-for="WrkAcmplshDate" class="text-danger"></span>
            </div>
        </div>
        @*<div class="col-md-6">
