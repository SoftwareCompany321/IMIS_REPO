@using IMIS_CORE.Core

@model IMIS_Service.ViewModel.ItemCategoriesVM
    <div>
        @if (Model.ParentId <= 0)
        {
            <div>
                Upper Level
            </div>
        }
        else
        {
            <div>
                Child Level
            </div>
        }
        <div class="form-group is-empty">
            <label for="region" class="col-md-2 control-label">
                @Utils.GetLabel("Description(English)")<span class="requried">*</span>
            </label>
            <div class="col-md-9">
                <input type="text" class="form-control" asp-for="NameEn">
            </div>
        </div>
        <div class="form-group is-empty">
            <label for="region" class="col-md-2 control-label">
                @Utils.GetLabel("Description(Nepali)")<span class="requried">*</span>
            </label>
            <div class="col-md-9">
                <input type="text" class="form-control" asp-for="NameNp" onkeypress="return setUnicode(event,this);">
            </div>
        </div>
        <div class="form-group is-empty">
            <label for="region" class="col-md-2 control-label">
                @Utils.GetLabel("Description(Code)")<span class="requried">*</span>
            </label>
            <div class="col-md-9">
                <input type="text" class="form-control" asp-for="Code">
            </div>
        </div>
        <div class="form-group is-empty">
            <label for="region" class="col-md-2 control-label">
                @Utils.GetLabel("Description(DepreciationPer)")<span class="requried">*</span>
            </label>
            <div class="col-md-9">
                <input type="text" class="form-control" asp-for="DepreciationPer">
            </div>
        </div>

        <div class="form-group is-empty">
            <label for="region" class="col-md-2 control-label">
                @Utils.GetLabel("Description(Isexp)")<span class="requried">*</span>
            </label>
            <div class="col-md-9">
                <input type="checkbox" class="form-control" asp-for="Isexp">
            </div>
        </div>

        <div class="form-group is-empty">
            <label for="short-name" class="col-md-2 control-label">
                @Utils.GetLabel("Nutuam has kati mulya")
            </label>
            <div class="col-md-6">
                <input type="text" class="form-control" asp-for="Rminl">
            </div>

        </div>
        <div class="form-group is-empty">
            <label for="short-name" class="col-md-2 control-label">
                @Utils.GetLabel("Atikam has kati mulya")
            </label>
            <div class="col-md-6">
                <input type="text" class="form-control" asp-for="Rmaxl">
            </div>
        </div>
    </div>